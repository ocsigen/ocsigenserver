                        optcomp,
                        netstring,
                        netstring-pcre,
                        cryptokit,
                        findlib,
                        dynlink
  FindlibContainers   : ocsigenserver

Object base
  Path                : src/baselib
  FindlibFullName     : ocsigenserver.baselib.base
  Modules             : Ocsigen_lib_base
